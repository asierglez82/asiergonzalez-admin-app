{
  "name": "social-credentials-manager",
  "version": "1.0.0",
  "description": "Google Cloud Function para manejar credenciales de redes sociales con Secret Manager",
  "main": "index.js",
  "scripts": {
    "start": "functions-framework --target=socialCredentials",
    "deploy": "gcloud functions deploy social-credentials --gen2 --runtime=nodejs20 --region=europe-west1 --source=. --entry-point=socialCredentials --trigger=https --allow-unauthenticated"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@google-cloud/secret-manager": "^5.0.1",
    "cors": "^2.8.5",
    "sharp": "^0.33.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
