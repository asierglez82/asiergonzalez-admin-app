rules_version = '2';

// Reglas de Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura y escritura en la carpeta blog-images sin autenticación
    match /blog-images/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Permitir lectura y escritura en la carpeta blog-compositions sin autenticación
    match /blog-compositions/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Para otras carpetas, requerir autenticación
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
